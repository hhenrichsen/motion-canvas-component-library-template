{
  "name": "motion-canvas-component-library",
  "version": "0.0.0",
  "description": "",
  "scripts": {
    "prepare": "husky install",
    "build:dev": "rollup -c rollup.config.mjs",
    "watch": "rollup -c rollup.config.mjs -w",
    "build": "rollup -c rollup.config.mjs",
    "prebuild": "rimraf ./lib",
    "lint-staged": "lint-staged",
    "lint": "npm run eslint && npm run prettier",
    "format": "npm run eslint:fix && npm run prettier:fix",
    "eslint": "eslint \"**/*.ts?(x)\"",
    "eslint:fix": "eslint --fix \"**/*.ts?(x)\"",
    "prettier": "prettier --check .",
    "prettier:fix": "prettier --write .",
    "serve": "vite"
  },
  "unpkg": "lib/bundle.js",
  "main": "lib/index.js",
  "types": "lib/index.d.ts",
  "keywords": [
    "motion-canvas"
  ],
  "author": "",
  "homepage": "",
  "peerDependencies": {
    "@motion-canvas/2d": "^3.14.2",
    "@motion-canvas/core": "^3.14.1"
  },
  "devDependencies": {
    "@motion-canvas/ui": "^3.16.0",
    "@motion-canvas/vite-plugin": "^3.15.1",
    "@rollup/plugin-terser": "^0.4.4",
    "@rollup/plugin-typescript": "^11.1.6",
    "@typescript-eslint/eslint-plugin": "^7.16.1",
    "@typescript-eslint/parser": "^7.16.1",
    "cross-env": "^7.0.3",
    "eslint": "^8.57.0",
    "eslint-plugin-tsdoc": "^0.3.0",
    "husky": "^9.1.0",
    "lint-staged": "^15.2.7",
    "prettier": "^3.3.3",
    "rimraf": "^6.0.1",
    "rollup": "^4.18.1",
    "rollup-plugin-dts": "^6.1.1",
    "rollup-plugin-node-externals": "^7.1.2",
    "typescript": "^5.5.3",
    "vite": "^4.2.1",
    "vite-tsconfig-paths": "^4.3.2"
  },
  "lint-staged": {
    "*.{ts,tsx}": "eslint --fix",
    "*.{js,jsx,ts,tsx,md,scss,json,mjs}": "prettier --write"
  }
}
